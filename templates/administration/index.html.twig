{% extends 'base.html.twig' %}

{% block title %}Page administration!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table, td, th{ border: 1px solid ;}
    
</style>

<div class="example-wrapper">
        <h3>Lites des lieux</h3>
    <table >
        <thead>
            <tr>
                <th colspan="1">Nom</th>
                <th colspan="1">Addresse</th>
                <th colspan="1">Type</th>
            </tr>
        </thead>
        <tbody>
            {% for place in places %}
            <tr>
                <td>{{ place.name }}</td>
                <td>{{ place.address }}</td>
                <td>{{ place.type.name }}</td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">The table footer</td>
            </tr>
        </tfoot>
    </table>
    {{form_start( formplace) }} 
    {{ form_widget ( formplace ) }}
    <button type="submit">Ajouter</button>
    {{ form_end( formplace ) }}
    <h3>Listes des options</h3>
    <table >
        <thead>
            <tr>
                <th colspan="1">Option</th>
            </tr>
        </thead>
        <tbody>
            {% for option in options %}
            <tr>
                <td>{{ option.name }}</td> 
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">The table footer</td>
            </tr>
        </tfoot>
    </table>

    <h3>Lites des types de lieu</h3>

    <table >
            <thead>
                <tr>
                    <th colspan="1">Option</th>
                    <th colspan="1">Icon</th>
                </tr>
            </thead>
            <tbody>
                {% for typeplace in typeplaces %}
                <tr>
                    <td>{{ typeplace.name }}</td> 
                    <td>{{ typeplace.icon }}</td> 
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">The table footer</td>
                </tr>
            </tfoot>
        </table>

</div>
{% endblock %}
